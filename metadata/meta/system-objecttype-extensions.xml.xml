<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">

    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="fitGeniusDomain">
                <display-name xml:lang="x-default">Fit Genius Domain</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="sizerightCategories">
                <display-name xml:lang="x-default">Size Right Categories</display-name>
                <description xml:lang="x-default">Used to define the categories on which the size widget will be displayed</description>
                <type>set-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="sizerightwidget">
                <display-name xml:lang="x-default">Size Right Widget</display-name>
                <attribute attribute-id="fitGeniusDomain"/>
                <attribute attribute-id="sizerightCategories"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
    <type-extension type-id="Category">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="sizeRightEnabled">
                <display-name xml:lang="x-default">Size Right Enabled</display-name>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="sizeRightGender">
                <display-name xml:lang="x-default">Size Right Gender</display-name>
                <type>enum-of-string</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">Male</display>
                        <value>Male</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Female</display>
                        <value>Female</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="sizeRightGroup">
                <display-name xml:lang="x-default">Size Right Group</display-name>
                <attribute attribute-id="sizeRightGender"/>
                <attribute attribute-id="sizeRightEnabled"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
